            $('#sign-in-with-twitter-button').click(function(e) {
                var top = (screen.height - 600) / 2;
                var left = (screen.width - 400) / 2;

                var popup = window.open(
                    '<?= $baseUrl ?>/twitterauth/create?installation_oauth_id=<?= urlencode($installation_oauth_id) ?>',
                    'twitterauth',
                    'height=300,width=400,location=1,menubar=0,resizable=1,status=0,toolbar=0,top=' + top + ',left=' + left
                );

                if (!popup) {
                    alert('Unable to create popup window for Twitter authentication. Check your popup blocker.');
                }
            });
        });

        function twitter_auth_callback() {
            window.location = '<?= $baseUrl ?>/configure?installation_oauth_id=<?= urlencode($installation_oauth_id) ?>';
